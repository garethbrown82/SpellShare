@model List<SpellShare.Models.SpellingList>

<div class="panel panel-default gb-panel-top-margin">
    <div class="panel-heading">Spelling Lists</div>
    <div class="panel-body">
        <p>These are all your spelling lists.</p>
    </div>

    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        @foreach (var list in Model)
        {
            <tr>
                <td>@list.Name</td>
                <td>@list.Description</td>
                <td>
                    <form method="get" asp-action="EditList" asp-route-id="@list.SpellingListId">
                        <input type="submit" value="Edit" class="btn btn-default" />
                    </form>
                </td>
                <td>
                    <form method="post" asp-action="DeleteList" asp-route-id="@list.SpellingListId">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
